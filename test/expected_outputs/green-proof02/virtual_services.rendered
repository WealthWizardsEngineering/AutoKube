apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: docx-generator
spec:
  gateways:
  - mesh
  - default-gateway
  hosts:
  - docx-generator
  - docx-generator.st.svc.cluster.local
  - apps.green.wealthwizards.io
  http:
  - match:
    - uri:
        regex: '^/docx-generator(/.*)?$'
    route:
    - destination:
        host: docx-generator.st.svc.cluster.local
        subset: master
---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: income-tax-service
spec:
  gateways:
  - mesh
  - default-gateway
  hosts:
  - income-tax-service
  - income-tax-service.st.svc.cluster.local
  - income-tax-service.st.wealthwizards.io
  http:
  - match
    - headers:
        x-variant-id:
          exact: OPS-3353
    route:
    - destination:
        host: income-tax-service.st.svc.cluster.local
        subset: OPS-3353
  - route:
    - destination:
        host: income-tax-service.st.svc.cluster.local
        subset: master
---
